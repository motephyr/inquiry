<div class="col-lg-4 col-md-4 col-sm-6">
  <div class="work-item">
    <%= link_to user_info_work_path(work.user,work), class: "item-wrap", target: '_blank' do %>
      <h2 class="subject"><%=work.subject %></h2>
      <div class="overview">
        <%= work_square(work) %>
      </div>
    <% end -%>

    <p class="info" id="work_info_<%= work.id %>">
      <span class="info-type">
      <%= content_tag :i, '',class: 'glyphicon glyphicon-link' if work.attach_url.present? %>
      </span>
      <i class="glyphicon glyphicon-eye-open"></i><span><%= work.hits %></span>
      <i class="glyphicon glyphicon-comment"></i><span><%= work.work_messages_count %></span>
      <%= link_to carers_work_path(work), class: 'heart_count_link' do %>
        <span class="heart_count"><%= work.cares_count %></span>
      <% end -%>
    </p>
  </div>
</div>