  
<div class="row">
  <div class="col-md-3">
            <%= render_list :class => "nav nav-tabs" do |div|
              div << link_to("美術設計", request.path_info + "?" + {category_id: 1,page: params[:page]}.to_param)
              div << link_to("工業設計", request.path_info + "?" + {category_id: 2,page: params[:page]}.to_param)
              div << link_to("文字編輯", request.path_info + "?" + {category_id: 3,page: params[:page]}.to_param)
              div << link_to("程式開發", request.path_info + "?" + {category_id: 7,page: params[:page]}.to_param)
              div << link_to("行銷企畫", request.path_info + "?" + {category_id: 8,page: params[:page]}.to_param)
              div << link_to("音樂人",  request.path_info + "?" + {category_id: 9,page: params[:page]}.to_param)
              div << link_to("影像製作", request.path_info + "?" + {category_id: 10,page: params[:page]}.to_param)
              div << link_to("其他", request.path_info + "?" + {category_id: 12,page: params[:page]}.to_param)
            end %>
            <% if current_user %>
            <div class="well">
              <p><%= link_to 'Conkwe正在beta測試中，如果你有任何分類上的建議，請按此留言，謝謝。', '#', id: 'chat'  %></p>
            </div>
            <% end %>
              
  </div>
  <div class="col-md-9">
    <div class="row">
      <div class="col-md-offset-4 col-md-6 col-sm-offset-4 col-sm-6 col-xs-12 work-responsive">
        
          
        
        <%= render_list :class => "nav nav-tabs" do |li|
            li << link_to('Good Job！', works_path(category_id: params[:category_id]), page: ""   )      
            li << link_to("最新",works_path(category_id: params[:category_id], page: "newest")   )
            li << link_to("關注", works_path(category_id: params[:category_id], page: "favorite") )
          if current_user
            li << link_to('新增作品..', new_account_user_info_work_path(current_user), class: 'btn btn-info pull-right')
          end
        end %>
        
      </div>
    </div>
    <div class="row">
      <%= render partial: 'account/works/work_index', collection: @works, as: :w || '沒有資料哦！' %>
    </div>
    <div class="row">
      <%= paginate @works %>
    </div>
  </div>
</div>
<% content_for :javascripts do %>
  <script>
    $('#chat').click(function(){
      Gossim.popup('<%= User.find(1).id %>', '<%= User.find(1).nickname %>')
    })
  </script>
<% end %>

<%= javascript_include_tag "works_list" %>
<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "works" %>
  <style>
      @media only screen and (max-width:991px) {
      .well { display: none; }
    }
  </style>
<% end -%>
